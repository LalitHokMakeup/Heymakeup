        items: 3,
        gutter: 16,
        edgePadding: 0,
        swipeAngle: false,
        speed: 400,
        loop: false,
        mouseDrag: true,
        nav: false,
        autoplay: false,
        autoplayButton: false,
        navPosition: 'bottom',
        controls: false,
        responsive: {
            0: {
                items: 2,
                nav: false,
                gutter: 9,
            },
            768: {
                items: 2.5,
                nav: false,
                gutter: 9,
            },
            1440: {
                items: 3,
            },
        },
    });
</script>
