<style>
    .feedback-slider-container {
        padding: 40px 0px;
        overflow: hidden;
        border-radius: 8px;
        position: relative;
        z-index: 1;
    }

    .feedback-slider-container::before {
        content: ' ';
        top: 0;
        left: 0;
        position: absolute;
        height: 60%;
        width: 100%;
        z-index: -10;
        border-radius: 8px;
    }

    .feedback-slider-container .feedback-image {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .feedback-slider-container .feedback-image .feedback-gif {
        max-width: 610px;
        max-height: 595px;
        aspect-ratio: 1/1;
        -o-object-fit: cover;
        object-fit: cover;
        border-radius: 6px;
    }

    .feedback-slider-container .feedback-title-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 0px 15px 10px;
    }

    .feedback-slider-container .feedback-title-container .feedback-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        padding: 0px 0px;
        cursor: grab;
    }

    .feedback-slider-container .feedback-title-container .feedback-content .feedback-rating {
        margin-bottom: 12px;
    }

    .feedback-slider-container .feedback-title-container .feedback-content p {
        text-align: center;
        text-transform: capitalize;
        margin-bottom: 0;
    }

    .feedback-slider-container .feedback-title-container .feedback-content .feedback-text {
        color: #393939;
        font-size: 15px;
        font-weight: 600;
        line-height: 22px;
    }

    .feedback-slider-container .feedback-title-container .feedback-content .feedback-user {
        color: #585858;
        font-size: 12px;
        font-weight: 400;
        line-height: 15px;
        text-transform: capitalize;
    }

    .feedback-slider-container .feedback-title-container button[data-action='stop'],
    .feedback-slider-container .feedback-title-container button[data-action='sart'] {
        display: none;
    }

    .feedback-slider-container .feedback-title-container .tns-nav {
        margin-top: 10px;
        display: flex;
        gap: 5px;
        align-items: center;
        justify-content: center;
    }

    .tns-nav button {
        height: 7px;
        width: 7px;
        border-radius: 50%;
        border: none;
        background-color: #fff;
    }

    .feedback-slider-container .feedback-title-container .tns-nav .tns-nav-active {
        background-color: #6a6a6a;
    }

    .feedback-slider-container .feedback-slider {
        position: relative;
    }

    .feedback-slider-container .feedback-slider .prev,
    .feedback-slider-container .feedback-slider .next {
        display: flex;
        align-items: center;
        justify-content: center;
        outline: none;
        border: none;
        background-color: #b1b3e3;
        border-radius: 100%;
        color: #e1e2fc;
        position: absolute;
        top: 50%;
        transform: translateX(-50%);
    }

    .feedback-slider-container .feedback-slider .prev {
        left: 0px;
    }

    .feedback-slider-container .feedback-slider .next {
        right: 0px;
    }

    @media screen and (max-width: 992px) {
        .feedback-slider-container {
            padding: 12px 0px;
            display: flex;
        }

        .feedback-slider-container::before {
            content: ' ';
            top: 118px;
            left: 0;
            position: absolute;
            height: 100%;
            width: 100%;
            background-color: #ffe5f4;
            z-index: -10;
            border-radius: 8px;
        }
    }

    @media screen and (max-width: 576px) {
        .feedback-slider-container {
            padding: 12px 0px;
            display: flex;
        }

        .feedback-slider-container::before {
            content: ' ';
            top: 118px;
            left: 0;
            position: absolute;
            height: 100%;
            width: 100%;
            background-color: #ffe5f4;
            z-index: -10;
            border-radius: 8px;
        }

        .feedback-slider-container .feedback-gif {
            width: 366px;
            height: 366px;
        }

        .feedback-slider-container .feedback-title-container {
            padding: 1rem;
        }
    }
</style>

<script>
    var feedbackSlider = tns({
        container: '.feedback-slider',
        items: 1,
        gutter: 0,
        edgePadding: 0,
        swipeAngle: false,
        speed: 400,
        mouseDrag: true,
        nav: true,
        autoplay: true,
        autoplayButton: false,
        navPosition: 'bottom',
        controls: false,
    });
    var feedSlides = tns({
