<div class="container mt-5" id="hotBefore{{ section.id | remove:"-" }}">
    <div class="d_cent">
        <p class="deals_txt">
            {{ section.settings.qsirguwfh }}
        </p>
    </div>
    {% if section.settings.sdfsdf != blank %}
    <p class="dealsub_txt mb-3">
        {{ section.settings.sdfsdf }}
    </p>
    {% endif %}
    <div class="hot_slider{{ section.id | remove:"-" }} overflow-hidden">
        {% for block in section.blocks %}
        <div>
            <a href="{{ block.settings.jlk }}" class="no-line">
                <img loading="lazy" src="{{ block.settings.adasda | image_url }}" class="mobile-screen w-100"
                    alt="Hot Deals Img">
                <img loading="lazy" src="{{ block.settings.adasda_mob | image_url }}" class="desktop-screen w-100"
                    alt="Hot Deals Img">
            </a>
            {% if block.settings.slideTxt and block.settings.txt_datetxt and block.settings.slideLink %}
            <div>
                <p class="slideTxt">{{ block.settings.slideTxt }}</p>
                <p class="txt_datetxt mb-0">{{ block.settings.txt_datetxt }}<br>
                    <span class="txt_date"> {{ block.settings.txt_date }}</span>
                </p>
                <a href="{{ block.settings.slideLink }}" class="slideLink">Read More</a>
            </div>
            {% endif %}

        </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
"name": "Carousel_cards",
"settings": [
{
"type": "text",
"id": "qsirguwfh",
"label": "Add Your Heading Here"
},
{
"type": "text",
"id": "sdfsdf",
"label": "Add Your Sub Heading Here"
}
],
"blocks": [
{
"name": "Image With Text",
"type": "Image",
"settings": [
{
"type": "image_picker",
"id": "adasda",
"label": "Add Your Mobile Image Here"
},
{
"type": "image_picker",
"id": "adasda_mob",
"label": "Add Your Image Here"
},
{
"type": "url",
"id": "jlk",
"label": "Add Your Link Here"
},
{
"type": "text",
"id": "slideTxt",
"label": "Add Your Main Text Here"
},
{
"type": "text",
"id": "txt_datetxt",
"label": "Add Your Main Text Here"
},
{
"type": "text",
"id": "txt_date",
"label": "Add Your Date here"
},
{
"type": "url",
"id": "slideLink",
"label": "Add Your Box Link Here"
}
]
}
],

"presets": [
{
"name": "Carousel_cards"
}
]
}
{% endschema %}
<style>
    #hotBefore{{ section.id | remove: "-" }}{ position: relative; }

    #hotBefore{{ section.id | remove: "-" }}:before {
        content: "";
        width: 100%;
        height: 70%;
        position: absolute;
        left: -10px;
        top: -24px;
        background: #EBECFF;
        z-index: -1;
    }

    .hot_slider{{ section.id | remove: "-" }} .slick-slide {
        padding: 0 8px;
    }

    .dealsub_txt {
        font-size: 18px;
        font-weight: var(--font-light);
        font-family: var(--font-montserrat);
        color: #191919;
        text-align: center;
    }

     .hot_slider{{ section.id | remove: "-" }} .slideTxt {
        color: #393939;
        font-family: Poppins;
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: 24px;
        margin: 10px 0 6px;
    }

     .hot_slider{{ section.id | remove: "-" }} .txt_datetxt {
        color: #393939;
        font-family: Montserrat;
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
    }

    .hot_slider{{ section.id | remove: "-" }} .txt_date {
        font-size: 14px;
    }

    .hot_slider{{ section.id | remove: "-" }} .slideLink {
        color: #404184;
        font-family: Poppins;
        font-size: 12px;
        font-style: normal;
        font-weight: 500;
        line-height: 14px;
        /* 116.667% */
        text-transform: uppercase;
    }


    @media screen and (max-width:768px) {

        .main-spaces {
            padding: 48px 0 48px 12px !important;
        }

        .dealsub_txt {
            font-size: 14px;
        }

    }
</style>



<script>
    $('.hot_slider{{ section.id | remove:"-" }}').slick({
        dots: false,
        infinite: false,
        speed: 300,
        slidesToShow: 3,
        slidesToScroll: 1,
        prevArrow: "<button type='button' class='slick-prev pull-left border-0'><i class='fa-solid fa-chevron-left' aria-hidden='true'></i></button>",
        nextArrow: "<button type='button' class='slick-next pull-right border-0'><i class='fa-solid fa-chevron-right' aria-hidden='true'></i></button>",
        responsive: [
            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 3,
                    infinite: true,
                    arrows: false
                }
            },
            {
                breakpoint: 600,
                settings: {
                    slidesToShow: 2.5,
                    slidesToScroll: 2,
                    arrows: false
                }
            },
            {
                breakpoint: 480,
                settings: {
                    slidesToShow: 1.4,
                    slidesToScroll: 1,
                    arrows: false
                }
            }
        ]
    });
</script>