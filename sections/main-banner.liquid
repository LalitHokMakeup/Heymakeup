                <div class="hp-hero" style="width:100%">
                    <a href="{{ block.settings.block_link_2 }}" class="slide111--card">
                <img {% unless forloop.first %}loading="lazy"{% endunless %} src="{{ block.settings.image | image_url }}" class="desktop-screen"
                            height="100%" width="100%">
                        <img {% unless forloop.first %}loading="lazy"{% endunless %} src="{{ block.settings.image_mobile | image_url }}" class="mobile-screen"
                            height="100%" width="100%" >
                    </a>
                </div>
                {% elsif block.settings.video_enabled %}
                {%- if forloop.first -%}
                {%- assign autoplay = 1 -%}
                {%- else -%}
                {%- assign autoplay = 0 -%}
                {%- endif -%}
                <div class="hp-hero" style="width:100%; height: 100%">
                    <a href="{{ block.settings.block_link_2 }}" class="slide111--card">
                        {{
                        block.settings['desk-vid']
                        | video_tag:
                        width: '100%',
                        height: '100%',
                        class: 'desktop-screen',
                        autoplay: true,
                        loop: true,
                        muted: true,
                        controls: false }}
                        {{
                        block.settings['mob-vid']
                        | video_tag:
                        width: '100%',
                        height: '100%',
                        class: 'mobile-screen',
                        autoplay: true,
                        loop: true,
                        muted: true,
                        controls: false }}
                    </a>
