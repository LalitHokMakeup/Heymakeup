{% schema %}
{
"name": "Main Banner",
"class": "slideshow dynamic__section section__slideshow",
"settings": [
{
"type":"checkbox",
"id":"showCat",
"default":false,
"label":"Show Catagories"
}
],
"blocks": [
{
"type": "slide",
"name": "Slide",
"limit": 10,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Desktop image"
},
{
"type": "image_picker",
"id": "image_mobile",
"label": "Mobile image"
},
{
"type": "checkbox",
"id": "video_enabled",
"label": "Show video",
"info": "If enabled video will show instead of an image",
"default": false
},
{
"type": "video",
"id": "desk-vid",
"label": "Desktop video"
},
{
"type": "video",
"id": "mob-vid",
"label": "Mobile video"
},
{
"type": "text",
"id": "block_button_2",
"label": "Second button label"
},
{
"type": "url",
"id": "block_link_2",
"label": "Second link"
}
]
}
],
"presets": [
{
"name": "Main Banner",
"category": "Image"
}
]
}
{% endschema %}

